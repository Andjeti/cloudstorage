<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0" author="konkvistador">
        <createTable tableName="users">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="2.0" author="konkvistador">
        <createTable tableName="files">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="size" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="3.0" author="konkvistador">
        <insert tableName="users">
            <column name="username" value="user1"/>
            <column name="password" value="1111"/>
            <column name="role" value="ROLE_USER"/>
        </insert>

        <insert tableName="users">
            <column name="username" value="user2"/>
            <column name="password" value="2222"/>
            <column name="role" value="ROLE_USER"/>
        </insert>

    </changeSet>

    <changeSet id="4.0" author="konkvistador">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="files"
                                 constraintName="fk_user_files"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>